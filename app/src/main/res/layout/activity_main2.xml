<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_1"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#E63232"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@id/text_view_1"
        android:layout_below="@id/text_view_1"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_2"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#00FFB7"
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@id/text_view_2"
        android:layout_below="@id/text_view_2"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_3"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#494949"
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toEndOf="@id/text_view_3"
        android:layout_below="@id/text_view_3"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_4"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#2E68FB"
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toStartOf="@id/text_view_4"
        android:layout_below="@id/text_view_4"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_5"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#B2DD8C"
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toStartOf="@id/text_view_5"
        android:layout_below="@id/text_view_5"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_6"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#2EE4AA"
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toStartOf="@id/text_view_6"
        android:layout_below="@id/text_view_6"
        android:paddingVertical="5dp"
        android:paddingHorizontal="40dp"
        android:id="@+id/text_view_7"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FDB118"
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
