<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_blue"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#03A9F4"
        android:text="Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignStart="@id/text_view_blue"
        android:id="@+id/text_view_green"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#8BC34A"
        android:layout_above="@id/text_view_blue"
        android:text="Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignStart="@id/text_view_green"
        android:id="@+id/text_view_red"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#F44336"
        android:layout_above="@id/text_view_green"
        android:text="Red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignStart="@id/text_view_green"
        android:id="@+id/text_view_orange"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#FF9800"
        android:layout_below="@id/text_view_blue"
        android:text="Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_alignStart="@id/text_view_orange"
        android:id="@+id/text_view_gray"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#ACACAC"
        android:layout_below="@id/text_view_orange"
        android:text="Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:paddingTop="10dp"
        android:layout_alignStart="@id/text_view_gray"
        android:id="@+id/text_view_pink"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#E632D4"
        android:layout_below="@id/text_view_gray"
        android:text="Pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
